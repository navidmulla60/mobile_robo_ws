FloatLayout:

    MDLabel:
        text: "Testing My App"
        halign: "center"
        pos_hint:{"center_x": .2, "center_y": 0.9}
        

    MDIconButton:
        id:right_key
        icon: "/home/navid/personal_projects/mobile_robo_ws/src/gui/resources/right_key.png"
        pos_hint: {'center_x':0.28 , 'center_y':0.35 }
        on_press: app.right_move(*args)
    
    MDIconButton:
        id:left_key
        icon: "/home/navid/personal_projects/mobile_robo_ws/src/gui/resources/left_key.png"
        pos_hint: {'center_x':0.12 , 'center_y':0.35 }
        on_press: app.left_move(*args)

    MDIconButton:
        id:up_key
        icon: "/home/navid/personal_projects/mobile_robo_ws/src/gui/resources/up_key.png"
        pos_hint: {'center_x':0.2 , 'center_y':0.5 }
        on_press: app.up_move(*args)

    MDIconButton:
        id:stop_key
        icon: "/home/navid/personal_projects/mobile_robo_ws/src/gui/resources/stop_key.png"
        pos_hint: {'center_x':0.2 , 'center_y':0.38 }
        on_press: app.stop_move(*args)

    MDIconButton:
        id:down_key
        icon: "/home/navid/personal_projects/mobile_robo_ws/src/gui/resources/down_key.png"
        pos_hint: {'center_x':0.2 , 'center_y':0.28 }
        on_press: app.down_move(*args)
    MDSlider:
        id:linear_vel
        min: 0
        max: 1
        value: 0.3
        hint: True
        on_touch_move: app.slider_linear(self.value)
        pos_hint: {'center_x':0.6 , 'center_y':0.5 }
        size_hint: 0.6,0.1

    MDLabel:
        text: "Linear: %s        " % linear_vel.value
        halign:'center'
        pos_hint:{"center_x": .6, "center_y": 0.85}
        

    MDSlider:
        id:ang_vel
        min: 0
        max: 1
        value: 0.3
        hint: True
        on_touch_move: app.slider_angular(self.value)
        pos_hint: {'center_x':0.6 , 'center_y':0.3 }
        size_hint: 0.6,0.1 

    MDLabel:
        text: "Angular: %s        " % ang_vel.value
        halign:'center'
        pos_hint:{"center_x": .6, "center_y": 0.8}
        
        
            